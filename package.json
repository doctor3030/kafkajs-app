{
  "name": "@doctor3030/kafkajsconnector",
  "version": "0.0.8",
  "description": "Kafka connector based on kafkajs.",
  "files": ["/**/*.js", "/**/*.d.ts"],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc --declaration",
    "test": "mocha -r ts-node/register 'src/tests/test_connector.ts' && mocha -r ts-node/register 'src/tests/test_app.ts'",
    "format": "prettier --print-width 160 --tab-width 4 --write 'src/**/*.ts' 'src/tests/**/*.ts'",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format",
    "postversion" : ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doctor3030/kafkajsConnector.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/doctor3030/kafkajsConnector/issues"
  },
  "homepage": "https://github.com/doctor3030/kafkajsConnector#readme",
  "Dependencies": {
    "kafkajs": "^1.15.0",
    "typescript": "^4.5.4",
    "winston-logger-kafka": "^0.0.10",
    "@types/node": "^17.0.0",
    "eslint": "^8.5.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  }
}
